@model Library.Web.Areas.Default.ViewModels.ShoppingCartViewModel
@{
}
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".RemoveLink").click(function () {
            var recotdToDelete = $(this).attr("data-id");
            if (recotdToDelete != '') {
                $.post("/Default/ShoppingCart/RemoveFromCart", { "id": recotdToDelete });

            }

        });

    });
</script>

<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    @Html.ActionLink("Checkout ", "AddressAndPayment", "Checkout")
</p>
<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Book Name
        </th>
        <th></th>
    </tr>
    @foreach (var item in  Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                @Html.ActionLink(item.Book.BookTitle, "Details", "Store", new { id = item.BookId}, null)
            </td>

            <td>
                <a href="#" class="RemoveLink" data-id="@item.RecordId">Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>

    </tr>
</table>