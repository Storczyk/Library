@model Library.Application.Queries.Order.OrderQuery

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script type="text/javascript">
    function Delete(Id) {
        $.ajax({
                type:"POST",
                url: "/Default/ShoppingCart/RemoveFromCart",
                data: JSON.stringify({ Id }),
                contentType: "application/json",
                dataType: 'json',
            });
    }
</script>
<p class="button">
    @Html.ActionLink("Checkout", "Checkout", "ShoppingCart")
</p>
<table>
    <tr>
        <th>
            Book Name
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Books)
    {

        <tr>
            <td>
                @Html.ActionLink(item.BookTitle, "Details", "Books", new { id = item.Id }, null)
            </td>

            <td>
                <a href="#" onclick="Delete('@item.Id')" class="RemoveLink">Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>Books: </td>
        <td>@Model.Books.Count()</td>

    </tr>
</table>