@model IEnumerable<Library.Application.Queries.Books.BookQuery>
@{
    <link rel="stylesheet" href="~/css/bookStyle.css" />
    ViewData["Title"] = "Books";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 row">
    <div class="col-md-3">
        <div class="form-group text-center" style="margin-top: 20px; margin-bottom: 20px;">
            <label style="color: black; font-family: Georgia; font-size: 14px;">Search by title</label>
            <input type="text" class="form-control" style="height: 20px; width:130px; display: inline-block; margin-left: 15px;" />
            <a href="#" class="btn btn-link" style="display:inline-block"><span class="glyphicon glyphicon-search" style="color: black; font-size: 20px;"></span></a>
        </div>
    </div>
    <div class="col-md-9">
        @foreach (var book in Model)
        {
            <div class="col-md-10">
                <div class="col-md-12 book-row" style="margin-bottom: 20px;">
                    <div class="col-sm-7 properties-column">
                            <a href="/Books/Book?Id=@book.Id" class="btn btn-link" style="font-size: 20px; color: black;">
                                <div class="book-title" style="display: inline-block">@book.BookTitle</div>
                            </a>
                        <p>
                            <span>Author: </span>
                            <span class="book-span">@book.Author.Name</span>
                        </p>
                        <p>
                            <span>Genre:</span>
                            <span class="book-span">@book.Genre</span>
                        </p>
                        <p>
                            <span>Pages: </span>
                            <span class="book-span">@book.Pages</span>
                        </p>
                        <p>
                            <span>Year: </span>
                            <span class="book-span">@book.Year</span>
                        </p>
                        <p>
                            <span>Publisher: </span>
                            <span class="book-span">@book.Publisher</span>
                        </p>
                        <p>
                            <span>EAN: </span>
                            <span class="book-span">@book.Ean</span>
                            <span style="margin-left: 10px;">ISBN: </span>
                            <span class="book-span">@book.Isbn</span>
                        </p>
                        <span class="book-span" style="font-size: 14px;">Available: @book.CurrentQuantity / @book.Quantity</span>
                    </div>
                    <div class="col-sm-5">
                        <p class="book-description">@book.Description</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <a onclick="SendAddToCartCommand('@book.Id', '@book.CurrentQuantity')" class="btn btn-link" style="font-size: 16px; margin-top: 100px; color: black;"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</a>
            </div>
        }
    </div>
</div>