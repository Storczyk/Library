@model IEnumerable<Library.Application.Queries.Books.BookQuery>
@{
    <script src="~/js/admin.js"></script>
    <link rel="stylesheet" href="~/css/bookStyle.css" />
    ViewData["Title"] = "Books";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<div class="row index-first-row" style="font-size: 12px;">
    <div class="add-book-frame">
        <a href="/Admin/Book/Add" class="btn btn-link" style="font-size: 20px;"><span class="glyphicon glyphicon-plus"></span></a>
    </div>

    @foreach (var book in Model)
    {
        <div class="col-md-12 book-row" style="margin-bottom: 20px;">
            <div class="col-sm-6 properties-column">
                <p>
                    <div class="book-title" style="display: inline-block">@book.BookTitle</div>
                    <button onclick="sendDeleteBookCommand('@book.Id')" type="button" class="btn btn-link" style="float:right; margin-left: 20px; font-size: 20px;"><span class="glyphicon glyphicon-trash"></span></button>
                    <a href="/Admin/Book/Edit?Id=@book.Id" class="btn btn-link" style="float:right; font-size: 20px;"><span class="glyphicon glyphicon-edit"></span></a>
                </p>
                <p>
                    <span>Author: </span>
                    <span class="book-span">@book.Author.LastName</span>
                </p>
                <p>
                    <span>Genre:</span>
                    <span class="book-span">@book.Genre.Description</span>
                </p>
                <p>
                    <span>Pages: </span>
                    <span class="book-span">@book.Pages</span>
                </p>
                <p>
                    <span>Year: </span>
                    <span class="book-span">@book.Year</span>
                </p>
                <p>
                    <span>Publisher: </span>
                    <span class="book-span">@book.Publisher</span>
                </p>
                <p>
                    <span>EAN: </span>
                    <span class="book-span">@book.Ean</span>
                    <span style="margin-left: 10px;">ISBN: </span>
                    <span class="book-span">@book.Isbn</span>
                </p>
                <p style="font-weight:bold;">@book.Id</p>
            </div>
            <div class="col-sm-6">
                <p class="book-description">@book.Description</p>
            </div>
        </div>
    }
</div>