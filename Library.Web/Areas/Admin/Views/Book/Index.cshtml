@model IEnumerable<Library.Application.Queries.BookQuery>
@{
    <script src="~/js/admin.js"></script>
    <link rel="stylesheet" href="~/css/bookStyle.css" />
    ViewData["Title"] = "Books";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

<div class="row first-row" style="font-size: 12px;">
    @foreach (var book in Model)
    {
        <div class="col-md-12 book-row" style="margin-bottom: 20px;">
            <div class="col-sm-6 properties-column">
                <p>
                    <div class="book-title" style="display: inline-block">@book.Id @book.BookTitle</div>
                    <span onclick="sendDeleteBookCommand('@book.Id')" class="glyphicon glyphicon-trash" style="float:right; margin-left: 20px; font-size: 20px;"></span>
                    <span onclick="sendEditBookCommand('@book.Id')" class="glyphicon glyphicon-edit" style="float:right; font-size: 20px;"></span>
                </p>
                <p>
                    <span>Author: </span>
                    <span class="book-span">@book.Author</span>
                </p>
                <p>
                    <span>Genre:</span>
                    <span class="book-span">BookGenre</span>
                </p>
                <p>
                    <span>Pages: </span>
                    <span class="book-span">@book.Pages</span>
                </p>
                <p>
                    <span>Year: </span>
                    <span class="book-span">@book.Year</span>
                </p>
                <p>
                    <span>Publisher: </span>
                    <span class="book-span">@book.Publisher</span>
                </p>
                <p>
                    <span>EAN: </span>
                    <span class="book-span">@book.Ean</span>
                    <span style="margin-left: 10px;">ISBN: </span>
                    <span class="book-span">@book.Isbn</span>
                </p>
            </div>
